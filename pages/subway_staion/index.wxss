/* pages/subway_staion/index.wxss */
.flex-box {
    display: flex;
    flex-direction: row;
    border-bottom: #CCCCCC solid 1px;
    margin: 28rpx;
    width: 600rpx;
    padding:10rpx;
    height: 70rpx;
   }
   
   .btn-area{
    margin: 30rpx;
    margin-top: 50rpx;
    width: 600rpx;
   }
   
   .flex-box-header{
    width: 25%;
    font-size: 30rpx;
    margin-top: 10rpx;
    color: #999999;
   
    /* line-height: 60rpx; */
   }
   
   .flex-box-content{
    width: 70%;
    margin-top: 0rpx; 
    font-size: 45rpx;
   }
   .flex-box-content-pricker{
    margin-top: 0rpx; 
    width: 70%;
    font-size: 45rpx;
   }
   .form-content{
    margin-top:30rpx; 
    display: flex;
    margin-left: 4%;
    width: 91%;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    border: 3rpx solid #CCCCCC;
    height: 400rpx;
   }
   
   .bus-view{
    display: flex;
    flex-direction: row;
    width: 700rpx;
    height: 100rpx;
    margin:20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #CCCCCC; 
   }
   
   .bus-view-left{
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    width: 200rpx;
    /* border-right: 1rpx solid #CCCCCC; */
   }
   
   .bus-view-right{
    width: 300rpx;
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    /* border: 1rpx solid #CCCCCC; */
   }
   
   .bus-view-right-item{
    text-align: center;
    margin: 5rpx;
   }
   
   .btn-query{
    padding-top: 20rpx;
    width: 100% !important;
    background-color:#3399CC;
    color:#FFFFFF;
   }

   /* 列表样式 */
   /* pages/bills/index.wxss */
.scroll{
    width: 92%;
    margin: auto auto;
    border-radius: 20rpx;
}
.log-list {
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    padding: 10px 0;
    /* border: 1px solid rgb(248, 248, 248);   */
    border: 2px solid var(--themeColor);
    border-bottom: none;
    font-size: medium !important;
  }
  .log-list:last-child{
      border-bottom: 2px solid var(--themeColor);
  }
  .tr{
    border-radius: 20rpx;
    /* margin: 10rpx; */
    /* margin:0 10rpx; */
    font-weight: 600;
    color: white;
    background-color: var(--themeColor);
  }
  .item {
    border-radius: 20rpx;
    font-size: smaller;
    /* padding:0 20rpx; */
    display: inline;
    flex: 1;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
  }
  