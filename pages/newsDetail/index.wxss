.page{
    height: 100%;
    width: 100%;

}
.news{
    margin: 0 auto;
    margin-top: 20rpx;
    padding: 20rpx;
    width: 90%;
    border-radius: 20rpx;
    background-color: #f0f0f0;
    overflow: hidden;
}
.news .top{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    /* background-color: blue; */
}
.news .top .icon{
    width: 80rpx;
    height: 100%;
    /* background-color: tomato; */
}
.news .top .icon image{
    width: 100%;
    height: 100%;
}
.news .top .head{
    width: 100%;
    height: 100%;
    margin-left: 20rpx;
    /* background-color: turquoise; */
}
.news .top .head .head_title{
    height: 50%;
    /* background-color: white; */
}
.news .top .head .date{
    height: 50%;
    width: 28.5%;
    white-space: nowrap;
    overflow: hidden;
    /* background-color: white; */
}
.news .title{
    width: 100%;
    padding: 10rpx;
    margin-bottom: 20rpx;
    height: 50rpx;
    font-size: larger;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    /* background-color: blueviolet; */
}
.news .img{
    text-align: center;
    width: 100%;
    height: 300rpx;
    /* background-color: crimson; */
}
.news .img image{
    width: 100%;
    height: 300rpx;
    /* background-color: yellow; */
}
.news .content{
    margin-top: 20rpx;
    width: 100%;
    color: gray;
    /* background-color: green; */
    
    overflow: hidden;
    text-overflow: ellipsis;
}