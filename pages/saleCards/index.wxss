/* pages/saleCards/index.wxss */
.page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
}
.container .top{
    padding: 0 20rpx;
    margin: 10rpx 0;
    width: 100%;
    height: 80rpx;
    /* background-color: aqua; */
    display: flex;
    flex-direction: row;
}
.container .top .exchange_code{
    text-indent: 10rpx;
    font-size: 30rpx;
    flex: 6;
    height: 100%;
    /* background-color: bisque; */
}
.container .top .exchange_code input{
    width: 100%;
    height: 100%;
    border: 2px solid var(--themeColor);
    box-sizing: border-box;
}
.container .top .btn_exchange{
    flex: 4;
    height: 100%;
    color: white;
    background-color: var(--themeColor);
    /* background-color: chartreuse; */
}
.container .top .btn_exchange button{
    color: white;
    background-color: var(--themeColor);
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.container .card{
    font-size: 30rpx;
    color: white;
    margin: 20rpx auto;
    border: 1px solid #ccc;
    border-radius: 15rpx;
    padding: 0 20rpx;
    width: 95%;
    height: 100rpx;
    background-color: var(--themeColor);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.container .card .c_name{

    width: 200rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
}
.container .card .c_num{

    width: 100rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
}