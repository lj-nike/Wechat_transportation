/* pages/cart/index.wxss */
page{
    padding-bottom: 90rpx;
    background-color: var(--themeColor);
}
.container{
    width: 100%;
    height: 800rpx;
    
    /* background-color: yellow; */
}
.container .card{
    display: flex;
    width: 90%;
    height: 200rpx;
    border-radius: 20rpx;
    margin: 40rpx auto;
    /* background-color: turquoise; */
    /* text-align: center; */
    align-items: center;
    justify-content: center; 
}
.container .card text{
    font-size: x-large;
    color: white;
}

.container .Code_img{

    width: 90%;
    height: 600rpx;
    border-radius: 20rpx;
    margin: 20rpx auto;
    /* background-color: tomato; */
    text-align: center;
    overflow: hidden;
}
.container .Code_img image{
    width: 100%;
    height: 100%;
}

.container .update{
    display: flex;
    width: 100%;
    height: 80rpx;
    color: white;
    text-align: center;
    font-size: large;
    align-items: center;
    justify-content: center;
}
.container .update image{
    /* margin: 10rpx 0; */
    width: 50rpx;
    height: 50rpx;
    
}
