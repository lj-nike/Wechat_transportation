.flex-box {
    display: flex;
    flex-direction: row;
    border-bottom: #CCCCCC solid 1px;
    margin: 28rpx;
    width: 600rpx;
    padding:10rpx;
    height: 70rpx;
   }
   
   .btn-area{
    margin: 30rpx;
    width: 600rpx;
   }
   
   .flex-box-header{
    width: 25%;
    font-size: 30rpx;
    margin-top: 10rpx;
    color: #999999;
   
    /* line-height: 60rpx; */
   }
   
   .flex-box-content{
    width: 70%;
    margin-top: 0rpx; 
    font-size: 45rpx;
   }
   .flex-box-content-pricker{
    margin-top: 0rpx; 
    width: 70%;
    font-size: 45rpx;
   }
   
   .form-content{
    margin-top:30rpx; 
    display: flex;
    margin-left: 5%;
    width: 90%;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    border: 3rpx solid #CCCCCC;
    height: 450rpx;
   }
   
   .bus-view{
    display: flex;
    flex-direction: row;
    width: 700rpx;
    height: 100rpx;
    margin:20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #CCCCCC; 
   }
   
   .bus-view-left{
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    width: 200rpx;
    /* border-right: 1rpx solid #CCCCCC; */
   }
   
   .bus-view-right{
    width: 300rpx;
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    /* border: 1rpx solid #CCCCCC; */
   }
   
   .bus-view-right-item{
    text-align: center;
    margin: 5rpx;
   }
   
   .btn-query{
    width: 100% !important;
    background-color:#3399CC;
    color:#FFFFFF;
   }
   
   
.container{
    width: 100%;
    /* background-color: aqua; */
}
.container .ticket{
    width: 91.5%;
    height: 200rpx;
    margin: 10rpx auto;
    /* background-color: brown; */
    border: 2px dashed #ccc;
    border-radius: 20rpx;
}
.container .ticket .ticket_top{
    display: flex;
    width: 100%;
    height: 70%;
    border-bottom: 1px dashed #ccc;
    background-color: burlywood;
}
.container .ticket .ticket_top .time{
    text-align: center;
    flex: 8.5;    
    height: 100%;
    display: flex;
    justify-content: space-evenly;
    background-color: crimson;
}
.container .ticket .ticket_top .time .start{
    flex: 1;
    height: 100%;
    background-color: darkgray;
}
.container .ticket .ticket_top .time .start .start_time{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: hotpink;
}
.container .ticket .ticket_top .time .start .start_poi{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: #008c8c;
}
.container .ticket .ticket_top .time .info{
    flex: 1;
    height: 100%;
    background-color: darkmagenta;
}
.container .ticket .ticket_top .time .info .train{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: hotpink;
}
.container .ticket .ticket_top .time .info .during{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: #008c8c;
}
.container .ticket .ticket_top .time .end{
    flex: 1;
    height: 100%;
    background-color: gold;
}
.container .ticket .ticket_top .time .end .end_time{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: hotpink;
}
.container .ticket .ticket_top .time .end .end_poi{
    width: 100%;
    height: 50%;
    line-height: 70rpx;
    background-color: #008c8c;
}
.container .ticket .ticket_top .money{
    height: 100%;
    flex: 1.5;
    text-align: center;
    line-height: 140rpx;
    color: red;
    font-size: 35rpx;
    font-weight: bold;
    background-color: darkcyan;
}
.container .ticket .ticket_bottom{
    display: flex;
    text-align: center;
    width: 85%;
    height: 30%;
    line-height: 60rpx;
    background-color: cornflowerblue;
}
.container .ticket .ticket_bottom text{
    flex: 1;
    text-align: center;
}