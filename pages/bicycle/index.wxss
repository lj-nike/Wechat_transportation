/* pages/bicycle/index.wxss */
.card{
    display: flex;
    background-color: var(--themeColor);
    color: white;
    font-weight: bold;
    font-size:xx-large;
    width: 90%;
    height: 200rpx;
    border-radius: 20rpx;
    margin: 40rpx auto;
    /* background-color: turquoise; */
    /* text-align: center; */
    align-items: center;
    justify-content: center; 
}
.container{
    margin: 30rpx 0;
    /* background: aqua; */
    width: 100%;
    height: 900rpx;
    border: 1px solid #ccc;
}
.container .icon{
    
    width: 80%;
    height: 50%;
    /* background-color: blueviolet; */
    margin:10rpx auto;

}
.container .icon image{
    width: 100%;
    height: 100%;
}
.container .ride_info{
    width: 80%;
    height: 40%;
    margin: 30rpx auto;
    /* background-color: red; */
    display: flex;
    flex-direction: column;
    align-content: space-around;
}
.container .ride_info view{
    height: 50rpx;
    width: 100%;
    /* background-color: yellow; */
    margin: 10rpx 0;
    line-height: 50rpx;
}
.pay{
    display:flex;
    height: 50rpx;
    flex-direction: row;
    justify-content: space-around;
}
.pay button{
    font-size: 30rpx;
    font-weight: normal;
    width: 250rpx !important;
    height: 100% !important;
    text-align: center;
    background-color: var(--themeColor);
    color: white;
    /* line-height: 50rpx; */
    line-height: 20rpx;
}
