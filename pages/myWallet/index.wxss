/* pages/myWallet/index.wxss */
.page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 800rpx;
}
.container .card{
    width: 80%;
    height: 300rpx;
    margin: 20rpx auto;
    background-color: #1470e9;
    color: white;
    border-radius: 40rpx;
}
.container .card view{
    font-size: 70rpx;
    width: 100%;
    height: 50%;
    line-height: 180rpx;
    text-align: center;
}
.container .card view:last-child{
    line-height: normal;
}

.container .recharge{
    width: 80%;
    height: 400rpx;
    margin: 20rpx auto;
    /* background-color: #1470e9; */
    color: #666;
}
.container .recharge .title{
    width: 100%;
    height: 30rpx;
    font-size: large;
    line-height: 30rpx;
    text-align: left;
    margin: 20rpx 0;
}
.container .recharge .number{
    width: 100%;
    height: 60rpx;
    display: flex;
    margin-bottom: 20rpx;
    justify-content: space-evenly;
}
.container .recharge .number view{
    border-radius: 10rpx;
    height: 100%;
    line-height: 60rpx;
    text-align: center;
    flex: 1;
    margin-right: 20rpx;
    border: 1px solid #999;
}
.container .recharge .number view.last{
    margin-right: 0;
}
.container .submit{
    width: 100%;
    height: 100rpx;

    display: flex;
    align-items: center;
    justify-content: space-between;
}
.container .submit .money_select{
    flex: 1;
    height: 100%;
    margin-right: 60rpx;
    line-height: 100rpx;
    text-align: center;
}
.container .submit .money_select text.balance{
    /* line-height: 100rpx; */
    font-size: 40rpx;
    color: #1470e9;
}
.container .submit .confirm{
    color: white;
    text-align: center;
    flex: 1;
    height: 60%;
    line-height: 60rpx;
    background-color: #1470e9;
    border-radius: 40rpx;
}
.container .tip{
    margin-top: 20rpx;
    font-size: smaller;
    width: 100%;
    height: 20rpx;
    text-align: center;
    line-height: 20rpx;
}
.container .tip text.important{
    color: #1470e9;
}
