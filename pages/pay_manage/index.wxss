/* pages/pay_manage/index.wxss */
.page{
    width: 100%;
    height: 100vh;
    background-color: #ccc;
}
.title{
    width: 90%;
    margin: 0 auto;
    height: 80rpx;
    line-height: 80rpx;
    text-align: left;
    /* background-color: aqua; */
}

.container{
    width: 100%;
    height: 200rpx;
    background-color: #e6e6e6;
}
.container .bank{
    width: 90%;
    height: 50%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    line-height: 100rpx;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
}
.container .wechat{
    width: 90%;
    height: 50%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    line-height: 100rpx;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
}
.container .wechat{
    border-bottom: none;
}
.container .des{
    flex: 9;
    height: 100%;
    /* background-color: brown; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.container .icon{
    align-items: center;
    text-align: center;
    flex: 1;
    height: 100%;
    /* background-color: cadetblue; */
}
.container .icon image{
    margin-top: 30rpx;
    width: 60%;
    height: 50%;
}